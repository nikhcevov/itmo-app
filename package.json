{ 
  "name": "gtfo-cdo",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:ovchingus/gtfo-cdo.git",
  "author": "Vladimir Ovechkin <ovchingus@gmail.com>",
  "license": "MIT",
  "scripts": {
    "client:start": "cd client && yarn start",
    "client:dev": "cd client && yarn dev",
    "client:build": "cd client && yarn build",
    "server:start": "cd server && yarn start",
    "server:dev": "cd server && yarn dev",
    "postinstall": "cd client && yarn install  && yarn build && cd ../server && yarn install",
    "start": "concurrently --kill-others-on-fail \"yarn server:start\" \"yarn client:start\"",
    "dev": "concurrently --kill-others-on-fail \"yarn server:dev\" \"yarn client:dev\"",
    "lint:client": "cd client && yarn lint",
    "lint:server": "cd server && yarn lint"
  },
  "lint-staged": {
    "client/src/**/*.{js,jsx}": [
      "yarn lint:client"
    ],
    "server/src/**/*.{js}": [
      "yarn lint:server"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "concurrently": "^5.1.0"
  },
  "devDependencies": {
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7"
  }
}