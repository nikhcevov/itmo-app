{
  "name": "itmo-app",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "repository": "git@github.com:ovchingus/itmo-app.git",
  "author": "Vladimir Ovechkin <ovchingus@gmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "concurrently": "^5.1.0"
  },
  "devDependencies": {
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7"
  },
  "scripts": {
    "client:start": "cd packages/itmo-app-client/ && yarn start",
    "client:dev": "cd packages/itmo-app-client/ && yarn dev",
    "client:build": "cd packages/itmo-app-client/ && yarn build",
    "api:start": "cd packages/itmo-app-api/ && yarn start",
    "api:dev": "cd packages/itmo-app-api/ && yarn dev",
    "api:build": "cd packages/itmo-app-api/ && yarn build",
    "start": "concurrently --kill-others-on-fail \"yarn api:start\" \"yarn client:start\"",
    "build": "concurrently --kill-others-on-fail \"yarn api:build\" \"yarn client:build\"",
    "dev": "concurrently --kill-others-on-fail \"yarn api:dev\" \"yarn client:dev\"",
    "test": "cd packages/itmo-app-api/ && yarn test",
    "lint:client": "cd packages/itmo-app-client/ && yarn lint",
    "lint:api": "cd packages/itmo-app-api/ && yarn lint"
  },
  "lint-staged": {
    "packages/itmo-app-client/src/**/*.{js,jsx}": [
      "yarn lint:client"
    ],
    "packages/itmo-app-api/src/**/*.{js}": [
      "yarn lint:api"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}